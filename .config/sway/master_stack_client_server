# directions
set $up i
set $down k
set $left j
set $right l

# main mode
set $mod Mod1

# kill
bindsym $mod+Shift+q exec ~/.config/scripts/layouts/master_stack/client.py kill

# move focused window
bindsym $mod+Shift+$left exec ~/.config/scripts/layouts/master_stack/client.py move left
bindsym $mod+Shift+$down exec ~/.config/scripts/layouts/master_stack/client.py move down
bindsym $mod+Shift+$up exec ~/.config/scripts/layouts/master_stack/client.py move up
bindsym $mod+Shift+$right exec ~/.config/scripts/layouts/master_stack/client.py move right

# move focused window:
bindsym $mod+Shift+Left exec ~/.config/scripts/layouts/master_stack/client.py move left
bindsym $mod+Shift+Up exec ~/.config/scripts/layouts/master_stack/client.py move up
bindsym $mod+Shift+Down exec ~/.config/scripts/layouts/master_stack/client.py move down
bindsym $mod+Shift+Right exec ~/.config/scripts/layouts/master_stack/client.py move right

# set workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# move focused container to workspace
bindsym $mod+Shift+1 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws1
bindsym $mod+Shift+2 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws2
bindsym $mod+Shift+3 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws3
bindsym $mod+Shift+4 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws4
bindsym $mod+Shift+5 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws5
bindsym $mod+Shift+6 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws6
bindsym $mod+Shift+7 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws7
bindsym $mod+Shift+8 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws8
bindsym $mod+Shift+9 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws9
bindsym $mod+Shift+0 exec ~/.config/scripts/layouts/master_stack/client.py move_to_workspace $ws10

exec ~/.config/scripts/layouts/master_stack/layout.py &
exec ~/.config/scripts/layouts/master_stack/server.py &
